<script src="{{ asset('js/jquery-1.7.2.js') }}" type="text/javascript"></script>
<table class="records_list" width="50%" border="0" cellspacing="0">
	<tr>
		<th style="background-color:#1E90FF;">Id</th>
		<th style="background-color:#1E90FF;">Nombre</th>
		<th style="background-color:#1E90FF;">Ubicacion</th>
		<th style="background-color:#1E90FF;">Tamaño</th>
		<th style="background-color:#1E90FF;">Borrar</th>
	</tr>
	{% for archivo in archivos%}
	<tr>
		<td class="id">
			{{ archivo.id }}
		</td>
		<td class="nombre">
			{{ archivo.nombre }}
		</td>
		<td>
			<a href="{{ archivo.link }}">{{ archivo.RutaWeb }}</a>
		</td>
		<td>
			{{ archivo.tamTexto }}
		</td>			
		<td>
		    <span onclick="confirmar(this,'{{path('archivo_borrar', { 'id' : archivo.id } )}}')" style="cursor: pointer"><strong>Borrar</strong></span>		    
		</td>		
	</tr>
	{% endfor %}
	<script>
	function confirmar(obj,ruta){
	    archivo = $.trim($(obj).parent().parent().children('.nombre').html());	    
	    id = $.trim($(obj).parent().parent().children('.id').html());
	    r = confirm ('Se eliminara el archivo \"' + archivo + "\" (id: " + id +") ¿Desea continuar?");
	    if(r == true)location.href = ruta;
	}
	</script>
</table>